{
  "window.titleBarStyle": "custom",
  "git.ignoreMissingGitWarning": true,
  "editor.fontSize": 20,
  "editor.cursorStyle": "block",
  // "editor.fontWeight": "600",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "files.trimTrailingWhitespace": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "[html]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "workbench.list.multiSelectModifier": "alt",
  "editor.emptySelectionClipboard": false,
  "editor.find.seedSearchStringFromSelection": false,
  "editor.occurrencesHighlight": true,
  "editor.stablePeek": true,
  "editor.wordWrap": "on",
  "explorer.openEditors.visible": 0,
  // "workbench.iconTheme": "material-icon-theme",
  "window.enableMenuBarMnemonics": false,
  "editor.minimap.enabled": false,
  "window.zoomLevel": 0,
  "eslint.options": {
    "configFile": ".eslintrc.json"
  },
  "workbench.colorCustomizations": {
    "editorWarning.foreground": "#ff0",
    "editorInfo.foreground": "#00f"
  },
  // "workbench.colorTheme": "Atom One Light",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },
  // show settings.json by default
  "workbench.settings.useSplitJSON": true,
  // php
  // Controls whether the built-in PHP language suggestions are enabled. The support suggests PHP globals and variables. // false because of PHP Intelephense
  "php.suggest.basic": false,
  // Enable/disable built-in PHP validation.
  "php.validate.enable": true,
  "files.associations": {
    "*.module": "php"
  },
  "javascript.updateImportsOnFileMove.enabled": "prompt",
  "workbench.editor.labelFormat": "short",
  "files.exclude": {
    "**/node_modules": true
  },
  "extensions.ignoreRecommendations": false,
  "editor.formatOnSave": true,
  "prettier.disableLanguages": [
    // "javascript",
    // "javascriptreact",
    "css",
    "postcss",
    "less",
    "scss",
    "graphql",
    "markdown",
    "vue",
    "json",
    "jsonc"
  ],
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "typescript.preferences.quoteStyle": "single",
  "javascript.preferences.quoteStyle": "single",
  "workbench.colorTheme": "Î²ui - Eighties Dark",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.requireConfig": true,
}
