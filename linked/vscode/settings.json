{
  "window.titleBarStyle": "custom",
  "git.ignoreMissingGitWarning": true,
  "editor.fontSize": 20,
  "editor.cursorStyle": "block",
  // "editor.fontWeight": "600",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "files.trimTrailingWhitespace": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "[html]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "workbench.list.multiSelectModifier": "alt",
  "editor.emptySelectionClipboard": false,
  "editor.find.seedSearchStringFromSelection": false,
  "editor.occurrencesHighlight": true,
  "editor.stablePeek": true,
  "editor.wordWrap": "on",
  "explorer.openEditors.visible": 0,
  // "workbench.iconTheme": "material-icon-theme",
  "window.enableMenuBarMnemonics": false,
  "editor.minimap.enabled": false,
  "window.zoomLevel": -1,
  "eslint.options": {
    "configFile": ".eslintrc.json"
  },
  "workbench.colorCustomizations": {
    "editorWarning.foreground": "#ff0",
    "editorInfo.foreground": "#00f"
  },
  // "workbench.colorTheme": "Atom One Light",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },
  // show settings.json by default
  "workbench.settings.useSplitJSON": true,
  // php
  // Controls whether the built-in PHP language suggestions are enabled. The support suggests PHP globals and variables. // false because of PHP Intelephense
  "php.suggest.basic": false,
  // Enable/disable built-in PHP validation.
  "php.validate.enable": true,
  "files.associations": {
    "*.module": "php"
  },
  "javascript.updateImportsOnFileMove.enabled": "prompt",
  "workbench.editor.labelFormat": "short",
  "files.exclude": {
    "**/node_modules": true
  },
  "extensions.ignoreRecommendations": false,
  "editor.formatOnSave": true,
  "prettier.disableLanguages": [
    "postcss",
    "less",
    "scss",
    "graphql",
    "markdown",
    "vue",
    "json",
    "jsonc"
  ],
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "typescript.preferences.quoteStyle": "single",
  "javascript.preferences.quoteStyle": "single",
  "workbench.colorTheme": "Default High Contrast",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.requireConfig": true,
  "peacock.favoriteColors": [
    {
      "name": "Angular Red",
      "value": "#b52e31"
    },
    {
      "name": "Auth0 Orange",
      "value": "#eb5424"
    },
    {
      "name": "Azure Blue",
      "value": "#007fff"
    },
    {
      "name": "C# Purple",
      "value": "#68217A"
    },
    {
      "name": "Gatsby Purple",
      "value": "#639"
    },
    {
      "name": "Go Cyan",
      "value": "#5dc9e2"
    },
    {
      "name": "Java Blue-Gray",
      "value": "#557c9b"
    },
    {
      "name": "JavaScript Yellow",
      "value": "#f9e64f"
    },
    {
      "name": "Mandalorian Blue",
      "value": "#1857a4"
    },
    {
      "name": "Node Green",
      "value": "#215732"
    },
    {
      "name": "React Blue",
      "value": "#00b3e6"
    },
    {
      "name": "Something Different",
      "value": "#832561"
    },
    {
      "name": "Vue Green",
      "value": "#42b883"
    }
  ],
  "editor.selectionClipboard": false,
  "autoprefixer.options": {
    "browsers": [
      "last 4 versions",
      "ie >= 9",
      "> 5%"
    ]
  },
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "explorer.confirmDelete": false
}
